mixin block(title, boxed=true)
    .block(class=boxed && 'boxed')&attributes(attributes)
        if title
            h2=title
        block

mixin i(icon)
    i.fas(class=`fa-${icon}`)

mixin i-fab(icon)
    i.fab(class=`fa-${icon}`)

mixin job(title, place, placeLink, dates, location, withAt=true)
    .block.boxed.job
        header
            h3=title
            span.place
            ul
                if place
                    li
                        if withAt
                            | at
                            |
                        span.place
                            if placeLink
                                a(href=placeLink)=place
                            else
                                =place
                if dates
                    li #[+i('calendar')]
                        |
                        |
                        =dates
                if location
                    li #[+i('map-marker')]
                        |
                        |
                        =location
        .details
            block

mixin rateItem(title, subtitle, rate)
    .block.boxed.rate-item
        h5!=title
            if subtitle
                br
                small=subtitle
        //if rate
            .rate
                each value, index in new Array(10)
                    span(class=rate > index ? 'fill' : '')
